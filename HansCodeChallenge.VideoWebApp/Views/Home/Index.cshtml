@{
	ViewData["Title"] = "Home Page";
}
<div id="uploadMessage" class="alert" style="display:none;"></div>

<div class="container mt-4">
	<ul class="nav nav-tabs" id="videoTab" role="tablist">
		<li class="nav-item" role="presentation">
			<button class="nav-link active" id="list-tab" data-bs-toggle="tab" data-bs-target="#list" type="button" role="tab">List</button>
		</li>
		<li class="nav-item" role="presentation">
			<button class="nav-link" id="upload-tab" data-bs-toggle="tab" data-bs-target="#upload" type="button" role="tab">Upload</button>
		</li>
	</ul>

	<div class="tab-content mt-3" id="videoTabContent">
		<!-- List Tab -->
		<div class="tab-pane fade show active" id="list" role="tabpanel">
			<h4>Uploaded Videos</h4>
			<video id="videoPlayer" width="640" height="360" controls class="mb-3">
				<source id="videoSource" type="video/mp4">
				Your browser does not support the video tag.
			</video>
			<br />
			<ul id="videoList" class="list-group">
				<!-- Dynamically populated list items -->
				<!-- <li class="list-group-item">SampleVideo1.mp4</li> -->
			</ul>
		</div>

		<!-- Upload Tab -->
		<div class="tab-pane fade" id="upload" role="tabpanel">
			<h4>Upload New Video</h4>
			<form id="uploadForm">
				<div class="mb-3">
					<input type="file" id="fileInput" name="file" accept=".mp4" class="form-control" multiple>
					<div class="progress-wrapper">
						<progress id="uploadProgress" value="0" max="100"></progress>
						<span id="uploadPercent">0%</span>
					</div>
				</div>
				<button type="button" class="btn btn-primary" id="uploadButton">Upload</button>
			</form>
			<div id="uploadStatus" class="mt-3"></div>
		</div>
	</div>
</div>

@section Scripts {
	<script src="~/js/site.js" asp-append-version="true"></script>
}
